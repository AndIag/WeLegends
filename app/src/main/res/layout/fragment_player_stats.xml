<?xml version="1.0" encoding="utf-8"?>


<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/swipeRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="andiag.coru.es.welegends.fragments.FragmentRankeds">
    <com.github.ksoichiro.android.observablescrollview.ObservableScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:scrollbars="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/u"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <andiag.coru.es.welegends.utils.CircledNetworkImageView
            android:id="@+id/imageSummoner"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin" />

        <TextView
            android:id="@+id/textSummonerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/imageSummoner"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_toRightOf="@+id/imageSummoner"
            android:gravity="center"
            android:text="Greenstorm21"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="25dp"
            android:textStyle="bold"
            android:typeface="serif" />

        <TextView
            android:id="@+id/textServer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textSummonerName"
            android:layout_alignLeft="@+id/textSummonerName"
            android:layout_alignRight="@+id/textSummonerName"
            android:layout_alignStart="@+id/textSummonerName"
            android:layout_below="@+id/textSummonerName"
            android:gravity="center"
            android:text="EUROPA WEST"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:typeface="serif" />

        <TextView
            android:id="@+id/textLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textServer"
            android:layout_alignLeft="@+id/textServer"
            android:layout_alignRight="@+id/textServer"
            android:layout_alignStart="@+id/textServer"
            android:layout_below="@+id/textServer"
            android:gravity="center"
            android:text="Level 30"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:typeface="serif" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ranked Stats"
            android:id="@+id/textView9"
            android:layout_below="@id/imageSummoner"
            android:layout_alignLeft="@+id/imageSummoner"
            android:layout_alignStart="@+id/imageSummoner"
            android:layout_marginTop="10dp" />




    </RelativeLayout>

        <ExpandableListView
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:id="@+id/expandableListView"
            android:layout_below="@id/textView9"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp" />

    </LinearLayout>

    </com.github.ksoichiro.android.observablescrollview.ObservableScrollView>
</android.support.v4.widget.SwipeRefreshLayout>