<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="360dp"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:stateListAnimator="@anim/lift_up"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="1dp"
    card_view:cardUseCompatPadding="true"
    card_view:contentPadding="3dp"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="fill_parent"
            android:layout_height="140dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/card_background"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/summoner_rift2"></ImageView>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <ImageView
                    android:id="@+id/imgChamp"
                    android:transitionName="imageChampion"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="left|top"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/aatrox"/>

                <TextView
                    android:id="@+id/textSummonerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/imgChamp"
                    android:layout_alignLeft="@+id/imgChamp"
                    android:layout_alignRight="@+id/imgChamp"
                    android:layout_alignStart="@+id/imgChamp"
                    android:layout_below="@+id/imgChamp"
                    android:background="@android:color/black"
                    android:gravity="center_horizontal"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/button_text" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_above="@+id/textSummonerName"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/imgChamp"
                    android:layout_marginEnd="40dp"
                    android:layout_marginLeft="80dp"
                    android:layout_marginRight="30dp"
                    android:layout_toEndOf="@+id/imgChamp"
                    android:layout_toRightOf="@+id/imgChamp"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="vertical"
                    android:id="@+id/linearLayout2">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:id="@+id/imageView4"
                            android:src="@drawable/scoreboardicon_score"/>

                        <TextView
                            android:id="@+id/textKDA"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/button_text"
                            android:text="26/5/12"
                            android:paddingLeft="10dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:id="@+id/imageView3"
                            android:src="@drawable/scoreboardicon_minion"/>

                        <TextView
                            android:id="@+id/textCS"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/button_text"
                            android:text="266"
                            android:paddingLeft="10dp"
                            android:gravity="left"/>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:id="@+id/imageView5"
                            android:src="@drawable/scoreboardicon_gold"/>

                        <TextView
                            android:id="@+id/textGold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/button_text"
                            android:text="266"
                            android:paddingLeft="10dp"
                            android:gravity="left"/>
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/textLVL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/button_text"
                    android:text="12"
                    android:layout_alignTop="@+id/imgChamp"
                    android:layout_toLeftOf="@+id/linearLayout2"
                    android:layout_toStartOf="@+id/linearLayout2"
                    android:background="#a5000000"
                    android:backgroundTintMode="screen"
                    android:paddingRight="2dp"/>
            </RelativeLayout>
        </FrameLayout>

        <LinearLayout
            android:id="@+id/layoutVD"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/frameLayout"
            android:focusableInTouchMode="false"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textMap"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical|center_horizontal"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/button_text" />

            <TextView
                android:id="@+id/textDuration"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical|right"
                android:textAppearance="?android:attr/textAppearanceSmall" />
        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>