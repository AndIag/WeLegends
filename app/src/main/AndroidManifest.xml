<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="andiag.coru.es.welegends" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.ActivitySplashScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.ActivitySummoner"
            android:label="@string/title_activity_activity_summoner"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.ActivityMain"
            android:label="@string/app_name"
            android:parentActivityName=".activities.ActivitySummoner" >
        </activity>
        <activity
            android:name=".activities.ActivityDetails"
            android:label="@string/title_activity_activity_details"
            android:parentActivityName=".activities.ActivityMain" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="andiag.coru.es.welegends.activities.ActivityMain" />
        </activity>
        <activity
            android:name=".activities.ActivityAbout"
            android:label="@string/title_activity_activity_about" />
        <activity
            android:name=".activities.ActivityChampionStatsDetails"
            android:label="@string/title_activity_champion_stats_details" >
        </activity>
    </application>

</manifest>
