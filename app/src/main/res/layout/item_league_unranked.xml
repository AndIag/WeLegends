<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageRanked"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textDivision"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imageRanked"
        android:layout_alignLeft="@+id/imageRanked"
        android:layout_alignRight="@+id/imageRanked"
        android:layout_alignStart="@+id/imageRanked"
        android:layout_below="@+id/imageRanked"
        android:layout_marginBottom="5dp"
        android:gravity="center_horizontal"
        android:typeface="serif" />


</RelativeLayout>