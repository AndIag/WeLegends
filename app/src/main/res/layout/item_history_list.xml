<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    android:id="@+id/cardView"
                                    android:layout_width="360dp"
                                    android:layout_height="200dp"
                                    android:layout_margin="5dp"
                                    android:foreground="?android:attr/selectableItemBackground"
                                    android:stateListAnimator="@anim/lift_up"
                                    card_view:cardCornerRadius="4dp"
                                    card_view:cardElevation="1dp"
                                    card_view:cardUseCompatPadding="true"
                                    card_view:contentPadding="3dp"
                                    android:clickable="true">
    <RelativeLayout
        android:id="@+id/RelativeLayoutImage"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/summoner_rift">

        <ImageView
            android:id="@+id/imgChamp"
            android:transitionName="imageChampion"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="left|top"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/aatrox"/>

        <TextView
            android:id="@+id/textLVL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/button_text"
            android:text="12"
            android:background="#a5000000"
            android:backgroundTintMode="screen"
            android:paddingRight="2dp"
            android:layout_alignTop="@+id/imgChamp"
            android:layout_alignRight="@+id/imgChamp"
            android:layout_alignEnd="@+id/imgChamp"/>

        <TextView
            android:id="@+id/textSummonerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/imgChamp"
            android:layout_alignLeft="@+id/imgChamp"
            android:layout_alignRight="@+id/imgChamp"
            android:layout_alignStart="@+id/imgChamp"
            android:layout_below="@+id/imgChamp"
            android:background="@android:color/black"
            android:gravity="center_horizontal"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/button_text"
            android:text="Aatrox"/>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/imageView4"
            android:src="@drawable/scoreboardicon_score"
            android:layout_alignTop="@+id/imgChamp"
            android:layout_alignLeft="@+id/imageView3"
            android:layout_alignStart="@+id/imageView3"/>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/imageView3"
            android:src="@drawable/scoreboardicon_minion"
            android:layout_below="@+id/imageView4"
            android:layout_alignLeft="@+id/imageView5"
            android:layout_alignStart="@+id/imageView5"/>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/imageView5"
            android:src="@drawable/scoreboardicon_gold"
            android:layout_below="@+id/imageView3"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/textKDA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/button_text"
            android:text="26/5/12"
            android:paddingLeft="10dp"
            android:layout_alignTop="@+id/imageView4"
            android:layout_toRightOf="@+id/imageView4"
            android:layout_toEndOf="@+id/imageView4"/>

        <TextView
            android:id="@+id/textCS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/button_text"
            android:text="266"
            android:paddingLeft="10dp"
            android:gravity="left"
            android:layout_below="@+id/imageView4"
            android:layout_toRightOf="@+id/imageView4"
            android:layout_toEndOf="@+id/imageView4"/>

        <TextView
            android:id="@+id/textGold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/button_text"
            android:text="266"
            android:paddingLeft="10dp"
            android:gravity="left"
            android:layout_below="@+id/imageView3"
            android:layout_toRightOf="@+id/imageView3"
            android:layout_toEndOf="@+id/imageView3"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:id="@+id/RelativeLayoutText"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@color/lose">

            <TextView
                android:id="@+id/textMap"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical|center_horizontal"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/button_text"
                android:text="Summoner&apos;s Rift"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/textDuration"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="26/6/2015     36&apos;5&apos;&apos;"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_toRightOf="@+id/textMap"
                android:layout_toEndOf="@+id/textMap"
                android:layout_marginRight="10dp"/>

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>